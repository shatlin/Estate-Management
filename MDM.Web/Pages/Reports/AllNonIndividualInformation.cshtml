                    .draw();
            });

            $('#PhysicalAddress').on('keyup', function () {

                $('#list')
                    .DataTable().columns(11)
                    .search($('#PhysicalAddress').val(), false, true)
                    .draw();
            });

            $('#PostalAddress').on('keyup', function () {

