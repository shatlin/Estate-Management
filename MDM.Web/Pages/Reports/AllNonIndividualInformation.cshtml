                    .draw();
            });

            $('#Email').on('keyup', function () {

                $('#list')
                    .DataTable().columns(15)
                    .search($('#Email').val(), false, true)
                    .draw();
            });

            $('#MobilePhone').on('keyup', function () {

                $('#list')
                    .DataTable().columns(16)
                    .search($('#MobilePhone').val(), false, true)
                    .draw();
            });

            $('#JobTitle').on('keyup', function () {

                $('#list')
                    .DataTable().columns(17)
                    .search($('#JobTitle').val(), false, true)
                    .draw();
            });

            $('#AccountBalance').on('keyup', function () {

                $('#list')
                    .DataTable().columns(18)
                    .search($('#AccountBalance').val(), false, true)
                    .draw();
            });

            $('#CancelledAppNoPay').on('keyup', function () {

                $('#list')
                    .DataTable().columns(19)
                    .search($('#CancelledAppNoPay').val(), false, true)
                    .draw();
            });
            $('#CancelledNoFeePaid').on('keyup', function () {

                $('#list')
                    .DataTable().columns(20)
                    .search($('#CancelledNoFeePaid').val(), false, true)
                    .draw();
            });

            $('#BranchMembership').on('keyup', function () {

                $('#list')
                    .DataTable().columns(21)
                    .search($('#BranchMembership').val(), false, true)
                    .draw();
            });
            $('#CreatedOn').on('keyup', function () {

                $('#list')
                    .DataTable().columns(22)
                    .search($('#CreatedOn').val(), false, true)
                    .draw();
            });

        });
    </script>

}