@page
@model MM.Pages.Report.AllIndividualInformationModel


@{
    ViewData["Title"] = "All Individual Information";
    ViewData["Page"] = "All Individual Information";
}


<style>

    .table > thead > tr > th,
    .table > tbody > tr > th,
    .table > tfoot > tr > th,
    .table > thead > tr > td,
    .table > tbody > tr > td,
    .table > tfoot > tr > td {
        vertical-align: top;
    }

    .somestuff::-webkit-input-placeholder {
        text-align: right;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    .spinner:before {
        content: '';
        box-sizing: border-box;
        position: absolute;
        top: 50%;
        left: 50%;
        width: 120px;
        height: 120px;
        margin-top: -10px;
        margin-left: -10px;
        border-radius: 50%;
        border: 2px solid #ccc;
        border-top-color: #333;
        animation: spin .6s linear infinite;
        border: 16px solid #f3f3f3; /* Light grey */
        border-top: 16px solid #3498db; /* Blue */
    }
</style>


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">All Individual Information</h4>
            </div>
            <div class="card-body table-responsive">
                <table id="list" class="table table-bordered" cellspacing="0" cellpadding="0" width="100%">
                    <tfoot>
                        <tr style="background-color:white;color:black;">
                            <th style="min-width:150px;">Member Type</th>
                            <th style="min-width:150px;">Membership Status</th>
                            <th style="min-width:175px;">Memberhsip Number</th>
                            <th style="min-width:150px;">Memberhsip Grade</th>
                            <th style="min-width:250px;">Full Name</th>
                            <th style="min-width:150px;">First Name</th>
                            <th style="min-width:150px;">Last Name</th>
                            <th style="min-width:100px;">ID Number</th>
                            <th style="min-width:100px;">BirthDay</th>
                            <th style="min-width:200px;">Email</th>
                            <th style="min-width:150px;">Home Phone</th>
                            <th style="min-width:150px;">Business Phone</th>
                            <th style="min-width:150px;">Mobile Phone</th>
                            <th style="min-width:250px;">Address 1</th>
                            <th style="min-width:250px;">Address 2</th>
                            <th style="min-width:100px;">Account Balance</th>
                            <th style="min-width:175px;">Branch Membership</th>
                            <th style="min-width:100px;">Created On</th>
                            <th style="min-width:175px;">Modified via Portal</th>
                            <th style="min-width:100px;">Start Date</th>
                            <th style="min-width:100px;">End Date</th>
                            <th style="min-width:200px;">Company Name</th>
                            <th style="min-width:100px;">Occupation</th>
                            <th style="min-width:100px;">Ethnicity</th>
                            <th style="min-width:100px;">Gender</th>
                            <th style="min-width:250px;">Interested in Volunteer Work?</th>
                            <th style="min-width:400px;">Publish Company in the Annual Member Directory?</th>
                            <th style="min-width:450px;">Application Cancelled Date (Non-payment of Member Fee)</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

</div>

