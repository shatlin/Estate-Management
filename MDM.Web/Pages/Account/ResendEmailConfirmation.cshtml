@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
    ViewData["Page"] = "Resend email confirmation";
    Layout = "_LayoutAnonymous";
}
<p class="display-3 text-white text-center">@GlobalVariables.AppShortName</p>
<p class="lead text-center text-white">Resend Email Confirmation</p>

<form method="post" class="loginPage">
    <br />
    <br />
    <br />
    <div class="inputBox">
        <input type="email"
               asp-for="Input.Email"
               required
               onkeyup="this.setAttribute('value', this.value);"
               value="" />
        <label>Email</label>
    </div>


    <br />
    <br />
    <br />
    <div class="logindiv inputBox">

        <input type="submit" name="Resend" value="Re-Send" />
    </div>

</form>


