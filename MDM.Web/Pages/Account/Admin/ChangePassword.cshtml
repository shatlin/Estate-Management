@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
    ViewData["Page"] = "Change Password";
}


<partial name="_StatusMessage" for="StatusMessage" />
<form id="change-password-form" method="post">
    <div class="container-fluid" id="profile">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-12">
                <div class="card ">
                    <div class="card-header ">
                        <h4 class="card-title">Change Password</h4>
                    </div>
                    <div class="card-body ">
                        <div class="form-group">
                            <label class="control-label">Old Password </label> <span class="text-danger pl-1">*</span>
                            <input asp-for="Input.OldPassword" class="form-control" />
                            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                        </div>
                       
                        <div class="form-group">
                            <label class="control-label">New Password</label><span class="text-danger pl-1">*</span>
                            <input asp-for="Input.NewPassword" class="form-control" />
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Confirm New Password</label><span class="text-danger pl-1">*</span>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>


                    </div>
                    <div class="card-footer text-center">
                        <button type="submit" class="btn btn-primary">Update password</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>