<style>
    body {
        background-color: #f0f5f5;
    }

    .ind-member .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.5);
    }

    .membership-card {
        background: #22B9FF;
    }

    .membership-select {
        width: 50%;
        margin: 10px 0 10px 25%;
        font-size: 20px;
        height: auto !important;
    }

    .disability-align {
        margin-bottom: 20px;
    }

    .ind-member .hr-line {
        border: none;
        border-bottom: 1px solid #22B9FF;
    }

    .ind-member .vl {
        border-left: 1px solid #22B9FF;
        height: 300px;
    }

    .ind-member .vl-addinfo {
        border-left: 1px solid #22B9FF;
        height: 370px;
    }

    .ind-member .agree-checkbox {
        zoom: 1.3;
    }

    .ind-member .banking-icon {
        font-size: 25px;
        margin-left: 5px;
        color: #22B9FF;
    }

    .ind-member .register-btn {
        width: 15%;
    }

    .ind-member .addDoc-modal {
        margin-top: 10%;
    }

    .ind-member #selectFile {
        display: none;
    }

    .ind-member #addSelFileBtn {
        display: none;
    }
</style>

<div class="container-fluid mt-3 ind-member">
    <h5 class="display-4 text-center mb-3">
        Individual Membership
    </h5>
    <form>
        <!-- First Row -->
        <div class="row">
            <!-- First Col -->
            <div class="col-6">
                <!-- Profile info -->
                <div class="card mb-4 shadow-lg p-3 mb-3 bg-white rounded">
                    <div class="card-header bg-white">
                        <span class="d-flex justify-content-end">
                            <i class="fas fa-address-card fa-3x"></i>
                        </span>
                        <h4 class="card-title lead text-dark text-right">Profile Information</h4>
                    </div>

                    <div class="card-body">
                        <!-- Title/Initials -->
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label>Title</label>
                                    <select class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded">
                                        <option value="" selected disabled>Select</option>
                                        <option value="MS">MS</option>
                                        <option value="MRS">MRS</option>
                                        <option value="MR">MR</option>
                                        <option value="PROF">PROF</option>
                                        <option value="DR">DR</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-6">
                                <div class="form-group">
                                    <label>Initials</label>
                                    <input type="text" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                </div>
                            </div>
                        </div>

                        <!-- FirstName -->
                        <div class="form-group">
                            <label>First Name</label>
                            <input type="text" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                        </div>

                        <!-- LastName -->
                        <div class="form-group">
                            <label>Last Name</label>
                            <input type="text" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                        </div>

                        <!-- Gender/BirthDate -->
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label>Gender</label>
                                    <select class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded">
                                        <option value="" selected disabled>Select</option>
                                        <option value="Female">Female</option>
                                        <option value="Male">Male</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-6">
                                <div class="form-group">
                                    <label>Birth Date</label>
                                    <input type="date" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                </div>
                            </div>
                        </div>

                        <!-- Highest Qualification -->
                        <div class="form-group">
                            <label>Highest Qualification</label>
                            <select class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded">
                                <option value="" selected disabled>Select</option>
                                <option value="Matric/Grade12">Matric/Grade12</option>
                                <option value="1year diploma">1year diploma</option>
                                <option value="3year diploma">3year diploma</option>
                                <option value="4year degree">4year degree</option>
                            </select>
                        </div>

                        <!-- Occupation -->
                        <div class="form-group">
                            <label>Occupation</label>
                            <select class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded">
                                <option value="" selected disabled>Select</option>
                                <option value="Academic">Academic</option>
                                <option value="Consultant">Consultant</option>
                                <option value="Engineer">Engineer</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>

                        <!-- CompanyName -->
                        <div class="form-group">
                            <label>Company Name</label>
                            <input type="text" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                        </div>

                        <!-- JobTitle -->
                        <div class="form-group">
                            <label>Job Title</label>
                            <input type="text" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                        </div>

                        <!-- HomeLang/Ethnicity -->
