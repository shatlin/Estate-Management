            <div class="card-header bg-white">
                <h6><b>Additional Information</b></h6>
            </div>

            <div class="card-body">
                <!-- First Row -->
                <div class="row">
                    <!-- Disablity -->
                    <div class="col-4">
                        <div class="row">
                            <div class="col-6">
                                <label>Disability</label>
                                <div class="form-check disability-align mb-4 mt-2">
