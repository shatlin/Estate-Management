                                        <option value="Afrikaans">Afrikaans</option>
                                        <option value="English">English</option>
                                        <option value="isiZulu">isiZulu</option>
                                        <option value="Other">Other</option>
                                        <option value="SiSwati">SiSwati</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-6">
                                <div class="form-group">
                                    <label>Ethnicity</label>
                                    <select class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded">
                                        <option value="" selected disabled>Select</option>
                                        <option value="Asian">Asian</option>
                                        <option value="Black">Male</option>
                                        <option value="Coloured">Coloured</option>
                                        <option value="Indian">Indian</option>
                                        <option value="Other">Other</option>
                                        <option value="White">White</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Id/Nationality -->
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label>ID/Passport number</label>
                                    <input type="text" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                </div>
