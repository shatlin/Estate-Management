            </div>
        </div>
        <!-- Address -->
        <!-- History and Preferences -->
        <div id="histPref" class="text-center resume">
            <div class="row">
                <h3 class="mx-auto">Qualifications</h3>
                <h3 class="mx-auto">Employment History</h3>
            </div>

            <div class="card-deck mx-auto">
                <!-- Qualification -->
                <div class="card">
                    <div class="card-body">
                        <button type="button" class="btn btn-primary mb-2 float-right" data-toggle="modal"
                                data-target="#qualificationModal">
                            Add Qualification
                        </button>

                        <table class="table table-sm" id="qualificationTable">
                            <thead>
                                <tr>
                                    <th>Institute</th>
                                    <th>Qualification Name</th>
                                    <th>Qualification Type</th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody></tbody>
                        </table>
                    </div>
                </div>
                <!-- / Qualification -->
                <!-- Qualification Modal -->
                <div class="modal text-left" id="qualificationModal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Add Qualification</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>

                            <div class="modal-body">
                                <div class="form-group">
                                    <label class="labelCard">Qualification Category</label>
                                    <select class="form-control shadow textfieldCard" id="qualCategory">
                                        <option value="" selected disabled>Select</option>
                                        <option value="Current Studies">Current Studies</option>
                                        <option value="Completed Qualifications">
                                            Completed
                                            Qualifications
                                        </option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label class="labelCard">Institute</label>
                                    <input type="text" class="form-control shadow textfieldCard" id="qualInstitute">
                                </div>

                                <div class="form-group">
                                    <label class="labelCard">Qualification Name</label>
                                    <input type="text" class="form-control shadow textfieldCard" id="qualName">
                                </div>

                                <div class="form-group">
                                    <label class="labelCard">Student Number</label>
                                    <input type="text" class="form-control shadow textfieldCard" id="qualStudNumber">
                                </div>

                                <div class="form-group">
                                    <label class="labelCard">Start Date</label>
                                    <input type="date" class="form-control shadow textfieldCard" id="qualStartDate">
                                </div>

                                <div class="form-group">
                                    <label class="labelCard">End Date</label>
                                    <input type="date" class="form-control shadow textfieldCard" id="qualEndDate">
                                </div>

                                <div class="form-group">
                                    <label class="labelCard">Qualification Type</label>
                                    <select class="form-control shadow textfieldCard" id="qualType">
                                        <option value="" selected disabled>Select</option>
                                        <option value="Certificate">Certificate</option>
                                        <option value="Diploma">Diploma</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label class="labelCard">Enrolment Category</label>
                                    <select class="form-control shadow textfieldCard" id="qualEnrolCategory">
                                        <option value="" selected disabled>Select</option>
                                        <option value="Full Time">Full Time</option>
                                        <option value="Part Time">Part Time</option>
                                    </select>
                                </div>
                            </div>

                            <!-- Modal footer -->
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-dismiss="modal"
                                        id="addQualification">
                                    Add
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- / Qualification Modal-->
                <!-- Employment -->
                <div class="card">
                    <div class="card-body">
                        <button type="button" class="btn btn-primary mb-2 float-right" data-toggle="modal"
                                data-target="#employmentModal">
                            Add Employment History
                        </button>

                        <table class="table table-sm" id="employmentTable">
                            <thead>
                                <tr>
                                    <th>Employer</th>
                                    <th>Designation</th>
                                    <th>Employment Category</th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody></tbody>
                        </table>
                    </div>
                </div>
                <!-- / Employment -->
                <!-- Employment Modal -->
                <div class="modal text-left" id="employmentModal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Add Employment History</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>

                            <div class="modal-body">
                                <div class="form-group">
                                    <label class="labelCard">Employment Category</label>
                                    <select class="form-control shadow textfieldCard" id="empCategory">
                                        <option value="" selected disabled>Select</option>
                                        <option value="Current Employer">Current Employer</option>
                                        <option value="Previous Employer">Previous Employer</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label class="labelCard">Employer</label>
                                    <input type="text" class="form-control shadow textfieldCard" id="employer">
                                </div>

                                <div class="form-group">
                                    <label class="labelCard">Designation</label>
                                    <input type="text" class="form-control shadow textfieldCard" id="empDesignation">
                                </div>

                                <div class="form-group">
                                    <label class="labelCard">Start Date</label>
                                    <input type="date" class="form-control shadow textfieldCard" id="empStartDate">
                                </div>

                                <div class="form-group">
                                    <label class="labelCard">End Date</label>
                                    <input type="date" class="form-control shadow textfieldCard" id="empEndDate">
                                </div>

