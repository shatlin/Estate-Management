                <button class="btn btn-primary navbar-btn">Update</button>
            </nav>
        </div>
        <!-- / Navbar -->
        <!-- Details -->
        <!-- Profile Info -->
        <div id="profileInfo" class="text-center initialPage">
            <h3>Profile Information</h3>

            <div class="card mx-auto">
                <div class="card-body">
                    <div class="row mb-2">
                        <div class="col-4 text-left mt-2"><label class="labelCard">Title:</label></div>

                        <div class="col-8">
                            <select class="form-control textfieldCard shadow">
                                <option value="" selected disabled>Select</option>
                                <option value="MS">MS</option>
                                <option value="MRS">MRS</option>
                                <option value="MR">MR</option>
                                <option value="PROF">PROF</option>
                                <option value="DR">DR</option>
                            </select>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-4 text-left mt-2"><label class="labelCard">Initials:</label></div>

                        <div class="col-8">
                            <input type="text" class="form-control textfieldCard shadow">
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-4 text-left mt-2"><label class="labelCard">First Name:</label></div>

                        <div class="col-8">
                            <input type="text" class="form-control textfieldCard shadow">
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-4 text-left mt-2"><label class="labelCard">Last Name:</label></div>

                        <div class="col-8">
                            <input type="text" class="form-control textfieldCard shadow">
                        </div>
                    </div>

                    <div class="row mb-2">
