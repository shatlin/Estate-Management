<!-- StyleSheet -->
<style>
    #memberDetails {
        padding: 15px 30px;
    }

        #memberDetails .main-details {
            border: border-box;
            box-shadow: 0 2px 5px 0 rgb(0, 0, 0, 0.5);
        }

        #memberDetails .mainLabel {
            font-size: 13px;
            font-weight: 600;
        }

        #memberDetails .vl {
            border-left: 2px solid #22B9FF;
            height: 70px;
        }

        #memberDetails .selMemberStatus {
            height: 30px;
            border: none;
            font-size: 13px;
            font-weight: bold;
        }

        #memberDetails .inpMainDetails {
            width: 100px;
            border: none;
            height: 20px;
            margin-top: 8px;
            font-size: 13px;
            font-weight: bold;
        }

        /* Navbar ******/
        #memberDetails .nav-style {
            border-bottom: 1px solid #22B9FF;
        }

        /**** Cards *******/
        #memberDetails .card {
            width: 50%;
            box-shadow: 0 2px 5px 0 rgb(0, 0, 0, 0.5);
        }

        #memberDetails #otherCountry {
            display: none;
        }

        #memberDetails .labelCard {
            font-weight: bold;
        }

        #memberDetails .textfieldCard {
            border: none;
        }

        #memberDetails .disability-align {
            margin-bottom: 20px;
            text-align: left;
        }

        #memberDetails .preferenceCard {
            width: 100%;
            /*margin: 20px 0 30px;*/
        }

        #memberDetails .questColLine {
            border-right: 1px solid #22B9FF;
        }

        #memberDetails .questRowLine {
            border-top: 1px solid #22B9FF;
        }
</style>



    <div class="container-fluid" id="memberDetails">
        <!-- Main Details -->
        <div class="row main-details">
            <div class="col-6">
                <h5 class="display-4"><i class="fa fa-user-circle mr-3" aria-hidden="true"></i>UserName</h5>
            </div>
            <div class="col-6 p-2">
                <div class="row">
                    <div class="col-3 vl">
                        <label class="mainLabel">Membership Status</label>
                        <select class="form-control selMemberStatus" id="membershipStatus">
                            <option value="Application Cancelled">Application Cancelled</option>
                            <option value="Applicant">Applicant</option>
                            <option value="Active">Active</option>
                            <option value="Deceased">Deceased</option>
                            <option value="Resigned">Resigned</option>
                            <option value="Cancelled">Cancelled</option>
                            <option value="Suspended - account in arrears">Suspended - account in arrears</option>
                            <option value="Suspended">Suspended</option>
                        </select>
                    </div>
                    <div class="col-3 vl">
                        <label class="mainLabel">Total CDP Points</label>
                        <div class="row">
                            <i class="fa fa-calculator ml-3 mt-2 mr-1" aria-hidden="true"></i>
                            <input type="text" class="form-control inpMainDetails" placeholder="0">
                        </div>
                    </div>
                    <div class="col-3 vl">
                        <label class="mainLabel" data-toggle="tooltip"
                               title="Account Balance of the Company imported from Pastel">
                            Account
                            Balance
                        </label>
                        <input type="number" class="form-control inpMainDetails" placeholder="R00">
                    </div>
                    <div class="col-3 vl">
                        <label class="mainLabel">Modified By</label>
                        <input type="text" class="form-control inpMainDetails" placeholder="Melissa">
                    </div>
                </div>
            </div>
        </div>
        <!-- / Main Details -->
        <!-- Navbar -->
        <div class="nav-style mb-4">
            <nav class="navbar navbar-default navbar-fixed-top">
                <ul class="nav navbar-right">
                    <li class="active nav-link"><a href="#profileInfo">PROFILE INFO</a></li>
                    <li class="nav-link"><a href="#contactInfo">CONTACT INFO</a></li>
                    <li class="nav-link"><a href="#address">ADDRESS</a></li>
                    <li class="nav-link"><a href="#histPref">HISTORY</a></li>
                    <li class="nav-link"><a href="#addInfo">ADDITIONAL INFORMATION</a></li>
