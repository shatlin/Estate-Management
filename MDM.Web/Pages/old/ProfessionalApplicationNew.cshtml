        //set the style
        button.className = "fa fa-trash delbtn";

        // add button's "onclick" event.
        button.setAttribute('onclick', 'removeQualRow(this)');

        newInstitute.appendChild(newText1);
        newQualName.appendChild(newText2);
        newQualType.appendChild(newText3);
        deleteBtn.appendChild(button);
