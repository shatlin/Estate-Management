<div class="page-content" style="background-color: #05e8ba;
        background-image: linear-gradient(315deg, #05e8ba 15%, #087ee1 74%);
        ">
    <div class="wizard-v3-content">
        <div class="wizard-form">
            <div class="wizard-header">
                <h3 class="heading">
                    Professional Process Controller Application
                </h3>
            </div>
            <form class="form-register" action="#" method="post">
                <div id="form-total">
                    <!-- SECTION 1 -->
                    <!-- PROFILE -->
                    <h2>
                        <span class="step-icon"><i class="far fa-user"></i></span>
                        <span class="step-text">Profile</span>
                    </h2>
                    <section>
                        <div class="inner">

                            <!-- Profile info -->
                            <div class="card mb-4 shadow-lg p-3 mb-3 bg-white rounded">
                                <div class="card-header bg-white">
                                    <span class="d-flex justify-content-end">
                                        <i class="fas fa-address-card fa-3x"></i>
                                    </span>
                                    <h4 class="card-title lead text-dark text-right">Profile Information</h6>
                                </div>

                                <div class="card-body">
                                    <!-- Title/Initials -->
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label>Title</label>
                                                <select class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded">
                                                    <option value="" selected disabled>Select</option>
                                                    <option value="MS">MS</option>
                                                    <option value="MRS">MRS</option>
                                                    <option value="MR">MR</option>
                                                    <option value="PROF">PROF</option>
                                                    <option value="DR">DR</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-6">
                                            <div class="form-group">
                                                <label>Initials</label>
                                                <input type="text" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                            </div>
                                        </div>
                                    </div>

                                    <!-- FirstName -->
                                    <div class="form-group">
                                        <label>First Name</label>
                                        <input type="text" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                    </div>

                                    <!-- LastName -->
                                    <div class="form-group">
                                        <label>Last Name</label>
                                        <input type="text" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                    </div>

                                    <!-- Gender/BirthDate -->
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label>Gender</label>
                                                <select class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded">
                                                    <option value="" selected disabled>Select</option>
                                                    <option value="Female">Female</option>
                                                    <option value="Male">Male</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-6">
                                            <div class="form-group">
                                                <label>Birth Date</label>
                                                <input type="date" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Highest Qualification -->
                                    <div class="form-group">
                                        <label>Highest Qualification</label>
                                        <select class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded">
                                            <option value="" selected disabled>Select</option>
                                            <option value="Matric/Grade12">Matric/Grade12</option>
                                            <option value="1year diploma">1year diploma</option>
                                            <option value="3year diploma">3year diploma</option>
                                            <option value="4year degree">4year degree</option>
                                        </select>
                                    </div>

                                    <!-- Occupation -->
                                    <div class="form-group">
                                        <label>Occupation</label>
                                        <select class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded">
                                            <option value="" selected disabled>Select</option>
                                            <option value="Academic">Academic</option>
                                            <option value="Consultant">Consultant</option>
                                            <option value="Engineer">Engineer</option>
                                            <option value="Other">Other</option>
                                        </select>
                                    </div>

                                    <!-- CompanyName -->
                                    <div class="form-group">
                                        <label>Company Name</label>
                                        <input type="text" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                    </div>

                                    <!-- JobTitle -->
                                    <div class="form-group">
                                        <label>Job Title</label>
                                        <input type="text" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                    </div>

                                    <!-- HomeLang/Ethnicity -->
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label>Home Language</label>
                                                <select class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded">
                                                    <option value="" selected disabled>Select</option>
                                                    <option value="Afrikaans">Afrikaans</option>
                                                    <option value="English">English</option>
                                                    <option value="isiZulu">isiZulu</option>
                                                    <option value="Other">Other</option>
                                                    <option value="SiSwati">SiSwati</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-6">
                                            <div class="form-group">
                                                <label>Ethnicity</label>
                                                <select class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded">
                                                    <option value="" selected disabled>Select</option>
                                                    <option value="Asian">Asian</option>
                                                    <option value="Black">Male</option>
                                                    <option value="Coloured">Coloured</option>
                                                    <option value="Indian">Indian</option>
                                                    <option value="Other">Other</option>
                                                    <option value="White">White</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Id/Nationality -->
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label>ID/Passport number</label>
                                                <input type="text" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                            </div>
                                        </div>

                                        <div class="col-6">
                                            <div class="form-group">
                                                <label>Nationality</label>
                                                <select class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded">
                                                    <option value="" selected disabled>Select</option>
                                                    <option value="Other African Country">
                                                        Other African Country
                                                    </option>
                                                    <option value="Other Country, not on the African Continent">
                                                        Other Country, not on the African Continent
                                                    </option>
                                                    <option value="South African">South African</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Other Country -->
                                    <div class="row" style="margin-bottom: 30px;">
                                        <div class="col-6">&nbsp;</div>
                                        <div class="col-6">
                                            &nbsp;
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- / Profile info -->
                        </div>
                    </section>

                    <!-- END::SECTION 1 -->
                    <!-- SECTION 2 -->
                    <h2>
                        <span class="step-icon"><i class="fas fa-phone"></i></span>
                        <span class="step-text">Contact</span>
                    </h2>
                    <section>
                        <div class="inner">
                            <!-- Contact info -->
                            <div class="card mb-4 shadow-lg p-3 mb-3 bg-white rounded">
                                <div class="card-header bg-white">
                                    <h6><b>Contact Information</b></h6>
                                </div>

                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-4">
                                            <div class="form-group">
                                                <label>Home Number</label>
                                                <input type="text"
                                                       class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded"
                                                       placeholder="e.g.011 123 4567" />
                                            </div>
                                        </div>

                                        <div class="col-4">
                                            <div class="form-group">
                                                <label>Business Number</label>
                                                <input type="text"
                                                       class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded"
                                                       placeholder="e.g.011 123 4567" />
                                            </div>
                                        </div>

                                        <div class="col-4 form-group">
                                            <label>Mobile Number</label>
                                            <input type="text"
                                                   class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded"
                                                   placeholder="e.g.072 123 4567" />
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-6 form-group">
                                            <label>Email</label>
                                            <input type="email" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                        </div>

                                        <div class="col-6 form-group">
                                            <label>Alternative Email</label>
                                            <input type="email" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label>Fax</label>
                                                <input type="text"
                                                       class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded"
                                                       placeholder="e.g.011 123 4567" />
                                            </div>
                                        </div>

                                        <div class="col-6">
                                            <div class="form-group">
                                                <label>Fax To Email</label>
                                                <input type="text" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- / Contact info -->
                        </div>
                    </section>
                    <!-- END::SECTION 2 -->
                    <!-- SECTION 3 -->
                    <h2>
                        <span class="step-icon"><i class="far fa-address-book"></i></span>
                        <span class="step-text">Address</span>
                    </h2>
                    <section>
                        <div class="inner">
                            <!-- Physical -->
                            <div class="row">
                                <div class="col-6">
                                    <div class="card mb-4 shadow-lg p-3 mb-3 bg-white rounded">
                                        <div class="card-header bg-white">
                                            <h6><b>Physical Address</b></h6>
                                        </div>

                                        <div class="card-body">
                                            <div class="form-group">
                                                <label>Address Line 1</label>
                                                <input type="text" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                            </div>

                                            <div class="form-group">
                                                <label>Address Line 2</label>
                                                <input type="text" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                            </div>

                                            <div class="form-group">
                                                <label>Suburb</label>
                                                <input type="text" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                            </div>

                                            <div class="form-group">
                                                <label>Town/City</label>
                                                <input type="text" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                            </div>

                                            <div class="form-group">
                                                <label>Province</label>
                                                <select class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded">
                                                    <option value="" selected disabled>Select</option>
                                                    <option value="A">A</option>
                                                    <option value="B">B</option>
                                                    <option value="C">C</option>
                                                </select>
                                            </div>

                                            <div class="form-group">
                                                <label>Country</label>
                                                <select class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded">
                                                    <option value="" selected disabled>Select</option>
                                                    <option value="A">A</option>
                                                    <option value="B">B</option>
                                                    <option value="C">C</option>
                                                </select>
                                            </div>

                                            <div class="form-group">
                                                <label>Postal Code</label>
                                                <input type="text" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-6">
                                    <div class="card mb-4 shadow-lg p-3 mb-3 bg-white rounded">
                                        <div class="card-header bg-white">
                                            <h6><b>Postal Address</b></h6>
                                        </div>

                                        <div class="card-body">
                                            <div class="form-group">
                                                <label>Postal Line 1</label>
                                                <input type="text" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                            </div>

                                            <div class="form-group">
                                                <label>Postal Line 2</label>
                                                <input type="text" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                            </div>

                                            <div class="form-group">
                                                <label>Suburb</label>
                                                <input type="text" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                            </div>

                                            <div class="form-group">
                                                <label>Town/City</label>
                                                <input type="text" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                            </div>

                                            <div class="form-group">
                                                <label>Province</label>
                                                <select class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded">
                                                    <option value="" selected disabled>Select</option>
                                                    <option value="A">A</option>
                                                    <option value="B">B</option>
                                                    <option value="C">C</option>
                                                </select>
                                            </div>

                                            <div class="form-group">
                                                <label>Country</label>
                                                <select class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded">
                                                    <option value="" selected disabled>Select</option>
                                                    <option value="A">A</option>
                                                    <option value="B">B</option>
                                                    <option value="C">C</option>
                                                </select>
                                            </div>

                                            <div class="form-group">
                                                <label>Postal Code</label>
                                                <input type="text" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- / Physical Address -->

                        </div>
                    </section>
                    <!-- END::SECTION 3 -->
                    <!-- SECTION 4 -->
                    <h2>
                        <span class="step-icon"><i class="fas fa-user-md"></i></span>
                        <span class="step-text">Career</span>
                    </h2>
                    <section>
                        <div class="inner">
                            <!--Career-->
                            <!-- Qualification -->
                            <div class="card mb-4 shadow-lg p-3 mb-3 bg-white rounded">
                                <div class="card-header bg-white">
                                    <h6><b>Qualifications</b></h6>
                                </div>

                                <div class="card-body">
                                    <button type="button"
                                            class="btn btn-outline-primary mb-2"
                                            data-toggle="modal"
                                            data-target="#qualification">
                                        <i class="fas fa-plus"></i>
                                        Qualification
                                    </button>

                                    <table class="table" id="qualificationTable">
                                        <thead>
                                            <tr>
                                                <th>Institute</th>
                                                <th>Qualification Name</th>
                                                <th>Qualification Type</th>
                                                <th></th>
                                            </tr>
                                        </thead>

                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                            <!-- / Qualifiction -->
                            <!-- Qualification Add Modal -->
                            <div class="modal" id="qualification">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h4 class="modal-title">Add Qualification</h4>
                                            <button type="button" class="close" data-dismiss="modal">
                                                &times;
                                            </button>
                                        </div>

                                        <div class="modal-body">
                                            <div class="form-group">
                                                <label>Qualification Category</label>
                                                <select class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded">
                                                    <option value="" selected disabled>Select</option>
                                                    <option value="Current Studies">Current Studies</option>
                                                    <option value="Completed Qualifications">
                                                        Completed Qualifications
                                                    </option>
                                                </select>
                                            </div>

                                            <div class="form-group">
                                                <label>Institute</label>
                                                <input type="text" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                            </div>

                                            <div class="form-group">
                                                <label>Qualification Name</label>
                                                <input type="text" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                            </div>

                                            <div class="form-group">
                                                <label>Student Number</label>
                                                <input type="text" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                            </div>

                                            <div class="form-group">
                                                <label>Start Date</label>
                                                <input type="date" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                            </div>

                                            <div class="form-group">
                                                <label>End Date</label>
                                                <input type="date" class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded" />
                                            </div>

                                            <div class="form-group">
                                                <label>Qualification Type</label>
                                                <select class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded">
                                                    <option value="" selected disabled>Select</option>
                                                    <option value="Certificate">Certificate</option>
                                                    <option value="Diploma">Diploma</option>
                                                </select>
                                            </div>

                                            <div class="form-group">
                                                <label>Enrolment Category</label>
                                                <select class="form-control border-top-0 border-left-0 border-right-0 shadow-sm mb-3 bg-white rounded">
                                                    <option value="" selected disabled>Select</option>
                                                    <option value="Full Time">Full Time</option>
                                                    <option value="Part Time">Part Time</option>
                                                </select>
                                            </div>
                                        </div>

                                        <!-- Modal footer -->
                                        <div class="modal-footer">
                                            <button type="button"
                                                    class="btn btn-danger"
                                                    data-dismiss="modal">
                                                Add
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- / Qualification Modal-->
                            <!-- / Career History-->
                            <!--Employment-->
                            <div class="card mb-4 shadow-lg p-3 mb-3 bg-white rounded">
                                <div class="card-header bg-white">
                                    <h6><b>Employment History</b></h6>
                                </div>

                                <div class="card-body" style="margin-bottom: 11px;">
                                    <div class="form-group">
                                        <label>Do you have any Employment History?</label>
                                        <select class="form-control" id="selEmpHistory" onchange="showSelAddEmp(this)">
                                            <option value="" selected disabled>Select</option>
                                            <option value="Yes">Yes</option>
                                            <option value="No">No</option>
                                        </select>
                                    </div>

                                    <div id="addEmployment">
                                        <button type="button" class="btn btn-outline-primary mb-2" data-toggle="modal"
                                                data-target="#employmentModal">
                                            <i class="fas fa-plus"></i>
                                            Employment
                                        </button>

                                        <table class="table table-sm" id="employmentTable">
                                            <thead>
                                                <tr>
                                                    <th>Employer</th>
                                                    <th>Designation</th>
                                                    <th>Employment Category</th>
                                                    <th></th>
                                                </tr>
                                            </thead>

                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>

                                <!-- Employment Modal -->
                                <div class="modal" id="employmentModal">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h4 class="modal-title">Add Employment</h4>
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            </div>

                                            <div class="modal-body">
                                                <div class="form-group">
                                                    <label>Employment Category</label>
                                                    <select class="form-control" id="empCategory">
                                                        <option value="" selected disabled>Select</option>
                                                        <option value="Current Employer">Current Employer</option>
                                                        <option value="Previous Employer">Previous Employer</option>
                                                    </select>
                                                </div>

                                                <div class="form-group">
                                                    <label>Employer</label>
                                                    <input type="text" class="form-control" id="employer">
                                                </div>

                                                <div class="form-group">
                                                    <label>Designation</label>
                                                    <input type="text" class="form-control" id="empDesignation">
                                                </div>

                                                <div class="form-group">
                                                    <label>Start Date</label>
                                                    <input type="date" class="form-control" id="empStartDate">
                                                </div>

                                                <div class="form-group">
                                                    <label>End Date</label>
                                                    <input type="date" class="form-control" id="empEndDate">
                                                </div>

                                                <div class="form-group">
                                                    <label>Tel. Number</label>
                                                    <input type="number" class="form-control" id="empTelNumber">
                                                </div>

                                                <div class="form-group">
                                                    <label>Company Email</label>
                                                    <input type="email" class="form-control" id="empCompEmail">
                                                </div>

                                                <div class="form-group">
                                                    <label>Duties</label>
                                                    <textarea class="form-control" rows="2" id="empDuties"></textarea>
                                                </div>
