@{
    var isSuperUser = AuthorizationService.AuthorizeAsync(User, MDMPolicies.AllowSuperUser).Result.Succeeded;
    var isAdmin = AuthorizationService.AuthorizeAsync(User, MDMPolicies.AllowAdmin).Result.Succeeded;
    var isTrustee = AuthorizationService.AuthorizeAsync(User, MDMPolicies.AllowTrustee).Result.Succeeded;
    var isOwner = AuthorizationService.AuthorizeAsync(User, MDMPolicies.AllowOwner).Result.Succeeded;
    var isTenant = AuthorizationService.AuthorizeAsync(User, MDMPolicies.AllowTenant).Result.Succeeded;
    var isEstateManager = AuthorizationService.AuthorizeAsync(User, MDMPolicies.AllowEstateManager).Result.Succeeded;
    var isManagingAgent = AuthorizationService.AuthorizeAsync(User, MDMPolicies.AllowManagingAgent).Result.Succeeded;
    var isSecurityVendor = AuthorizationService.AuthorizeAsync(User, MDMPolicies.AllowSecurityVendor).Result.Succeeded;
    var isGardenVendor = AuthorizationService.AuthorizeAsync(User, MDMPolicies.AllowGardenVendor).Result.Succeeded;
    var isServiceProvider = AuthorizationService.AuthorizeAsync(User, MDMPolicies.AllowServiceProvider).Result.Succeeded;
}
<partial name="_NavProfile" />

<ul class="nav">

    @if (isSuperUser)
    {
        <partial name="_NavSuperUser" />
    }
    @if (isAdmin)
    {
    <partial name="_NavAdmin" />
    }
    @if (isTrustee)
    {
    <partial name="_NavTrustee" />
    }
    @if (isOwner)
    {
    <partial name="_NavOwner" />
    }
    @if (isTenant)
    {
    <partial name="_NavTenant" />
    }
    @if (isEstateManager)
    {
    <partial name="_NavEstateManager" />
    }
    @if (isManagingAgent)
    {
    <partial name="_NavManagingAgent" />
    }
    @if (isGardenVendor)
    {
    <partial name="_NavGardenVendor)" />
    }
    @if (isServiceProvider)
    {
    <partial name="_NavServiceProvider" />
    }
</ul>
