@page

@model MDM.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
    ViewData["Page"] = "Home";
    var isSuperUser = AuthorizationService.AuthorizeAsync(User, MDMPolicies.AllowSuperUser).Result.Succeeded;
    var isAdminUser = AuthorizationService.AuthorizeAsync(User, MDMPolicies.AllowAdminUser).Result.Succeeded;
    var isRegularStaff = AuthorizationService.AuthorizeAsync(User, MDMPolicies.AllowAdminUser).Result.Succeeded;
    var isReportViewerStaff = AuthorizationService.AuthorizeAsync(User, MDMPolicies.AllowToViewReports).Result.Succeeded;
    var isMember = AuthorizationService.AuthorizeAsync(User, MDMPolicies.AllowAdminUser).Result.Succeeded;
}



    @if (isRegularStaff)
    {
        <partial name="_IconsStaff" />
    }
    else if (isMember)
    {
        <partial name="_IconsMember" />
    }





